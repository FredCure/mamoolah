<% layout('layouts/boilerplate') %>

    <div class="col-6 offset-3">
        <h1 class="mt-3 mb-3">
            Edit User Infos
        </h1>
        <div class="card border-secondary mb-3">
            <div class="card-header">
                <h3>
                    <%= thisUser.username %>
                </h3>
            </div>
            <div class="card-body text-secondary">

                <form action="/users/<%= thisUser._id %>/changePwd?_method=PUT" method="POST" novalidate
                    class="validated-form">
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="user[password]" required>
                        <div class="valid-feedback">
                            Thank you!
                        </div>
                    </div>
                    <button class="btn btn-outline-info-subtle bg-info-subtle">Update password</button>
                </form>

            </div>
            <div class="card-footer">
                <a href="/users/<%= thisUser._id %>">Cancel</a>
            </div>
        </div>
    </div>