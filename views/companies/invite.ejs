<% layout('layouts/boilerplate') %>

    <div class="col-12">
        <h1 class="mt-3 mb-3">
            Invite someone to join <%= thisCompany.name %>:
        </h1>
        <div class="card border-secondary mb-3">
            <div class="card-body text-secondary">
                <form action="/companies/<%= thisCompany._id %>/invite" method="POST" novalidate class="validated-form">

                    <label for="name" class="form-label">Invited person's name:</label>
                    <input type="text" class="form-control" id="name" name="name" required><br>

                    <label for="email" class="form-label">Invited person's email:</label>
                    <input type="text" class="form-control" id="email" name="email" required><br>

                    <label for="role" class="form-label">Select role offered:</label>
                    <select class="form-select" id="role" name="role" required>
                        <option value="Owner">Owner</option>
                        <option value="Admin">Admin</option>
                        <option value="Employee">Employee</option>
                    </select><br>

                    <label for="message" class="form-label">Message:</label>
                    <textarea class="form-control" id="message" name="message" required></textarea><br>

                    <button class="btn btn-outline-info-subtle bg-info-subtle">Send Invitation</button>
                </form>
            </div>
            <div class="card-footer">
                <a href="/">Cancel</a>
            </div>
        </div>
    </div>