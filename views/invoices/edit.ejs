<% layout('layouts/boilerplate') %>

    <div class="col-6 offset-3">
        <h1 class="mt-3 mb-3">
            Edit Invoice
        </h1>
        <div class="card border-secondary mb-3">
            <div class="card-body text-secondary">

                <form action="/invoices/<%= thisInvoice._id %>?_method=PUT" method="POST" novalidate
                    class="validated-form">
                    <label for="number">Invoice Number:</label>
                    <input type="number" id="number" name="invoice[number]" value="<%= thisInvoice.number %>"
                        required><br>

                    <label for="client">Client:</label>
                    <input type="text" id="client" name="invoice[client]" value="<%= thisInvoice.client %>"
                        required><br>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="invoice[email]" value="<%= thisInvoice.email %>" required><br>

                    <!-- <label for="date">Date:</label>
                    <input type="date" id="date" name="invoice[date]" value="<%= thisInvoice.date %>" required><br> -->

                    <label for="terms">Terms:</label>
                    <input type="number" id="terms" name="invoice[terms]" value="<%= thisInvoice.terms %>" required><br>

                    <label for="subtotal">Subtotal:</label>
                    <input type="number" id="subtotal" name="invoice[subtotal]" value="<%= thisInvoice.subtotal %>"
                        required><br>

                    <label for="rebate">Rebate:</label>
                    <input type="number" id="rebate" name="invoice[rebate]" value="<%= thisInvoice.rebate %>"
                        required><br>

                    <label for="total">Total:</label>
                    <input type="number" id="total" name="invoice[total]" value="<%= thisInvoice.total %>" required><br>

                    <label for="deposit">Deposit:</label>
                    <input type="number" id="deposit" name="invoice[deposit]" value="<%= thisInvoice.deposit %>"
                        required><br>

